{
  "rules": {
    "donors": {
      ".read": true,
      ".write": true,
      ".indexOn": ["name", "bloodGroup", "status", "email", "phone"],
      "$donorId": {
        ".read": true,
        ".write": true
      }
    },
    "hospitals": {
      ".read": true,
      ".write": true,
      ".indexOn": ["name", "email", "license", "status"],
      "$hospitalId": {
        ".read": true,
        ".write": true
      }
    },
    "bloodRequests": {
      ".read": true,
      ".write": true,
      ".indexOn": ["hospitalId", "bloodGroup", "status", "createdAt"],
      "$requestId": {
        ".read": true,
        ".write": true
      }
    },
    "donorDonations": {
      ".read": true,
      ".write": true,
      "$donorId": {
        ".read": true,
        ".write": true,
        ".indexOn": ["donatedAt", "hospitalId"]
      }
    },
    "stats": {
      ".read": true,
      ".write": true
    },
    "notifications": {
      ".read": true,
      ".write": true,
      ".indexOn": ["donorId", "hospitalId", "createdAt"],
      "$notificationId": {
        ".read": true,
        ".write": true
      }
    }
  }
}
